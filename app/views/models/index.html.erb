<section id="slboard_model_main">
	<%= render :partial => 'layouts/ad' %>
	<ul class="media-list">
	<% unless @models.empty? %>
	<% @models.each do |model| %>	
  	<li class="media">
  	<%=link_to model_path(model),:class=>"pull-left" do %>    
    	<%=image_tag model.photo.small_thumb %>
    <% end %>
    <div class="media-body">
      <h4 class="media-heading"><%=link_to model.title,model_path(model) %></h4>
     	<div><%= simple_format(model.models_comment) %></div>
    </div>
  	</li>
	<% end %>
	<% else %>
	<li><%=t(:no_data) %></li>
	<% end %>
	<div id="sl_bottom_menu">
	<% if user_signed_in? %>
		<%= link_to t(:link_new), new_model_path %>
	<% end %>  
</ul>
	<%= paginate @models %>
</section>