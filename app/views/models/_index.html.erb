<article id="main_model" class="col-xs-12 carousel slide" data-ride="carousel">
	<h3>KB에게 추천하는 새 KB모델</h3>
	<% unless @models.empty? %>
	<div class="carousel-inner" role="listbox" style="clear:both">
		<% @models.each_with_index do |model,index| %>

			<div class="item<% if index.zero? %> active<% end %>">
				<div class="media">
				<%=link_to model_path(model),:class=>"pull-left" do %>
				<figure>
					<%=image_tag model.photo.small_thumb,:alt=>model.title %>
				</figure>
				<% end %>
				<div class="media-body">
					<h4 class="media-heading"><%=link_to model.title,model_path(model) %></h4>
					<%=link_to model_path(model) do %>
					<%=simple_format(model.recommend_description) %>
					<% end %>
				</div>
			</div>
			</div>

		<% end %>
	</div>
	<% else %>
	<div>
		<p>
			<%= t(:no_data) %>
		</p>
	</div>
	<% end %>
	<!-- Controls -->
	<a class="left carousel-control" href="#main_model" role="button" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a>
	<a class="right carousel-control" href="#main_model" role="button" data-slide="next"> <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>

	<%=link_to t(:link_more),models_path,:class=>'more' %>
</article>
