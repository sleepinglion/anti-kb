<% breadcrumb :report,@report %>
<div id="report_show">
	<div class="slboard_content" itemscope itemprop="article" itemtype="http://schema.org/Article">
		<div class="sl_content_header">
			<h3 itemprop="name"><%= @report.title %></h3>
			<p><%=t(:user_id,scope:[:activerecord,:attributes,:report]) %> : <span  itemprop="author"><%=link_to @report.user.name,user_path(@report.user) %></span>&nbsp;&nbsp;&nbsp; <%=t(:label_created_at)%> : <span itemprop="dateCreated"><%= @report.created_at %></span><span class="none" itemprop="dateModified"><%= @report.updated_at %></span></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text" itemprop="text"><%=simple_format(@report.report_content.content) %></div>
			<div class="vote">
			<%= link_to like_report_path(@report), method: :put do %>
				<span class="glyphicon glyphicon-thumbs-up"><span><%=@report.cached_votes_up %></span></span>
			<% end %>
			<!-- <%= link_to dislike_report_path(@report), method: :put do %>
				<span class="glyphicon glyphicon-thumbs-down"><span><%=@report.cached_votes_down %></span></span>
			<% end %> -->
		</div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_new), new_report_path %> &nbsp; | &nbsp;
		<%= link_to t(:link_list),reports_path %>
		<% if can? :update, @report %>
		 &nbsp; | &nbsp;
		<%= link_to t(:link_edit), edit_report_path(@report) %>
		<% end %>
	</div>
</div>
