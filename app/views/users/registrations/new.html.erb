<% if params[:no_layout] %>
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title" id="myModalLabel">KB 망하게하기 서명</h4>
		</div>
		<div class="modal-body">
<% end %>
<div class="col-xs-12">
<%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, :class=>'form-control',:required=>'required' %>
  </div>
	<div class="form-group">
		<%= f.label :photo %>
		<% if resource.photo? %>
			<%= image_tag(resource.photo.small_thumb) %>
		<% end %>
		<%= f.file_field :photo %>
		<%= f.hidden_field :photo_cache %>
	</div>
  <div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email, :class=>'form-control',:required=>'required' %>
  </div>
  <div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password, :class=>'form-control',:required=>'required' %>
  </div>
  <div class="form-group">
		<%= f.label :description %>
		<%= f.text_field :description, :class=>'form-control',:required=>'required' %>
  </div>
	<% if Rails.env.production?	%>
	<div class="form-group">
		<%= recaptcha_tags :display => { :theme => "clean" } %>
	</div>
	<% end %>
	<div class="form-group actions">
			<%= f.submit :class=>'btn btn-primary btn-block' %>
	</div>
<% end %>
</div>
<% if params[:no_layout] %>
		</div>
	</div>
</div>
<% end %>
