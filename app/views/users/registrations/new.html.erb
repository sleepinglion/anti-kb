<% if params[:no_layout] %>
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title" id="myModalLabel">KB 망하게하기 서명</h4>
		</div>
		<div class="modal-body">
<% end %>			
<%= form_for resource, :as => resource_name, :url => registration_path(resource_name),:html=>{:class=>'form-horizontal'} do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
		<%= f.label :name, :class=>'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :name, :class=>'form-control',:required=>'required' %>
		</div>
  </div>
	<div class="form-group">
		<%= f.label :photo, :class=>'col-sm-2 control-label' %>
		<% if resource.photo? %>
			<%= image_tag(resource.photo.small_thumb) %>
		<% end %>
		<div class="col-sm-10">
			<%= f.file_field :photo %>
			<%= f.hidden_field :photo_cache %>			
		</div>
	</div>
  <div class="form-group">
		<%= f.label :email, :class=>'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.email_field :email, :class=>'form-control',:required=>'required' %>
		</div>
  </div>
  <div class="form-group">
		<%= f.label :password, :class=>'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.password_field :password, :class=>'form-control',:required=>'required' %>
		</div>
  </div>
  <div class="form-group">
		<%= f.label :description, :class=>'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :description, :class=>'form-control',:required=>'required' %>
		</div>
  </div>
	<% if Rails.env.production?	%>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10"><%= recaptcha_tags :display => { :theme => "clean" } %></div>
	</div>
	<% end %>
	<div class="form-group actions">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit :class=>'btn btn-primary' %>
		</div>
	</div>
<% end %>
<% if params[:no_layout] %>
		</div>
	</div>
</div>
<% end %>