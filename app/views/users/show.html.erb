<section id="sl_user_show" itemscope itemtype="http://schema.org/Person">
  <h2 itemprop="name"><%=@user.name %></h2>
  <p><%=@user.description %></p>
  <%= link_to like_user_path(@user), method: :put do %>
    <span class="glyphicon glyphicon-thumbs-up"><span><%=@user.cached_votes_up %></span></span>
  <% end %>
  <% if @user.photo? %>
  <%=link_to image_tag(@user.photo.medium_thumb,:alt=>@user.name),@user.photo.large_thumb.url,:class=>'simple_image media-object',:title=>@user.name,:itemprop=>"image" %>
  <% end %>
  <div id="sl_bottom_menu">
		<%= link_to t(:link_list),users_path %>
	</div>
</section>
