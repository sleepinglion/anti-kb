<section id="main_user">
	<% unless @users.empty? %>
	<% @users.each do |user| %>	
	<article class="user_info" itemscope itemtype="http://schema.org/Person">
		<% if user.photo? %>
			<%=link_to image_tag(user.photo.small_thumb,:alt=>user.name),user.photo.large_thumb.url,:class=>'simple_image',:title=>user.name,:itemprop=>"image" %>		
		<% else %>
			<%=image_tag 'anon.png',:alt=>user.name,:itemprop=>"image" %>
		<% end %>
	<dl>
		<dt itemprop="name"><%=user.name %></dt>
		<dd itemprop="description"><%=user.description %></dd>
	</dl>
	</article>
	<% end %>	
	<% else %>
	<p><%=t(:no_data) %></p>
	<% end %>
	<div id="sign_up">
		<span class="label label-info"><%=@user_count %></span> 명이 서명하였습니다.	
		<% unless user_signed_in? %> &nbsp;&nbsp;
		<%=link_to '서명하기',new_user_registration_path %>
		<% end %>
		<%=link_to t(:link_more),users_path,:class=>'more' %>
	</div>
</section>