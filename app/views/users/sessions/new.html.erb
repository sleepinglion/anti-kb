<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:id=>'new_session_form',:class=>'form-horizontal col-xs-12' }) do |f| %>
<div class="form-group">
	<%= f.label :email, :class=>"col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.email_field :email,:class=>'form-control',:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password, :class=>"col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.password_field :password,:class=>'form-control',:required=>'required' %>
	</div>
</div>
<div class="form-group">
	<div class="checkbox col-sm-offset-2 col-sm-10">
		<label>
		<input type="checkbox" name="remember_email" id="remember_email">
		<%= t(:remember_email) %>
		</label>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit t(:login),:class=>'btn btn-primary btn-block' %>
	</div>
</div>
<div class="col-sm-offset-2 col-sm-10">
<%= render :partial => "users/shared/links" %>
</div>
<% end %>
