<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:id=>'new_session_form',:class=>'form-horizontal col-12' }) do |f| %>
<div class="form-group">
	<%= f.label :email, :class=>"control-label" %>
		<%= f.email_field :email,:class=>'form-control input-lg',:required=>'required' %>
</div>
<div class="form-group">
	<%= f.label :password, :class=>"control-label" %>
		<%= f.password_field :password,:class=>'form-control input-lg',:required=>'required' %>
</div>
<div class="form-group">
	<div class="checkbox col-sm-offset-2 col-sm-10">
		<label>
		<input type="checkbox" name="remember_email" id="remember_email">
		<%= t(:remember_email) %>
		</label>
	</div>
</div>
<div class="form-group">
		<%= f.submit t(:login),:class=>'btn btn-lg btn-primary btn-block' %>
</div>
<div class="col-12">
<%= render :partial => "users/shared/links" %>
</div>
<% end %>
