<% breadcrumb :compliments %>
<section id="compliment_main">
	<article class="table-responsive">
	<table width="100%" cellpadding="0" cellspacing="0" class="table slboard_list">
		<colgroup>
      <col style="width:10%" />
      <col style="wdith:20%" />
      <col />
      <col />
      <col style="wdith:10%" />
      <col style="wdith:10%" />
    </colgroup>
		<thead>
			<tr>
				<th><p class="sl_name"><%=t(:label_name) %></p></th>
				<th><p class="sl_category"><%=t(:label_bank) %></p></th>
				<th><p class="sl_category"><%=t(:label_compliment_category) %></p></th>
				<th><p class="sl_title"><%=t(:label_title) %></p></th>
				<th class="sl_right"><p class="sl_count"><%=t(:label_count) %></p></th>
				<th class="sl_right"><p class="sl_registered_date"><%=t(:label_created_at) %></p></th>
			</tr>
		</thead>
		<tbody>
			<% unless @compliments.empty? %>
			<% @compliments.each do |compliment| %>
  		<tr>
				<td><p class="sl_name"><%=compliment.user.name %></p></td>
       <td><p class="sl_category"><%=compliment.bank.title %></p></td>
				<td><p class="sl_category"><%=compliment.compliment_category.title %></p></td>
				<td><p><%= link_to compliment.title.truncate(25), compliment %></p></td>
				<td class="sl_right"><p class="sl_count"><%=compliment.impressionist_count(:filter=>:ip_address) %></p></td>
				<td class="sl_right"><p class="sl_registered_date"><%=compliment.created_at.to_date %></p></td>
  		</tr>
			<% end %>
  			<% else %>
  			<tr>
  				<td colspan="6"><p><%=t(:no_data) %></p></td>
  			</tr>
			<% end %>
		</tbody>
	</table>
	</article>
	<div id="sl_bottom_menu">
		<%= link_to t(:link_new), new_compliment_path %>
		<%= paginate @compliments %>
	</div>
</section>
