<% breadcrumb :compliment,@compliment %>
<div id="compliment_show">
	<div class="slboard_content" itemscope itemprop="article" itemtype="http://schema.org/Article">
		<div class="sl_content_header">
			<h3 itemprop="name"><%= @compliment.title %></h3>
			<p><%=t(:user_id,scope:[:activerecord,:attributes,:compliment]) %> : <span  itemprop="author"><%=link_to @compliment.user.name,user_path(@compliment.user) %></span>&nbsp;&nbsp;&nbsp; <%=t(:label_created_at)%> : <span itemprop="dateCreated"><%= @compliment.created_at %></span><span class="none" itemprop="dateModified"><%= @compliment.updated_at %></span></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text" itemprop="text"><%=simple_format(@compliment.compliment_content.content) %></div>
			<div class="vote">
			<%= link_to like_compliment_path(@compliment), method: :put do %>
				<span class="glyphicon glyphicon-thumbs-up"><span><%=@compliment.cached_votes_up %></span></span>
			<% end %>
			<!-- <%= link_to dislike_compliment_path(@compliment), method: :put do %>
				<span class="glyphicon glyphicon-thumbs-down"><span><%=@compliment.cached_votes_down %></span></span>
			<% end %> -->
		</div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_new), new_compliment_path %> &nbsp; | &nbsp;
		<%= link_to t(:link_list),compliments_path %>
		<% if can? :update, @compliment %>
		 &nbsp; | &nbsp;
		<%= link_to t(:link_edit), edit_compliment_path(@compliment) %>
		<% end %>
	</div>
</div>
