<article>
	<% unless @notices.empty? %>
	<ul>
		<% @notices.each do |notice| %>
		<li><%=notice.user.name %> : <%=link_to(notice.title,notice) %> <span class="date"><%=notice.created_at.to_date %></span></li>
		<% end %>
	</ul>
	<% else %>
	<p><%=t(:no_data) %></p>
	<% end %>
	<%=link_to t(:link_more),notices_path,:class=>'more' %>
</article>