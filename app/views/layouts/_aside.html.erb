<aside class="visible-lg">
	<fieldset>
	<% if user_signed_in? %>
			<legend><%=t(:logout) %></legend>
	<div id="login_users">
			<p><%=link_to(current_user.name, edit_user_registration_path) %>님 환영합니다.</p>
			<p id="logout_submit"><%= link_to t(:logout), destroy_user_session_path %></p>
	</div>
	<% else %>
	<%=form_tag new_user_session_path do %>
  <div class="form-group">
    <%= label_tag :email,t(:email,scope:[:activerecord,:attributes,:user]) %>
    <%= text_field_tag 'user[email]',nil, :id=>'email',:class=>'form-control',:maxLength=>150,:required=>'required' %>
  </div>
  <div class="form-group">
  	<%= label_tag :password,t(:password,scope:[:activerecord,:attributes,:user]) %>
  	<%= password_field_tag 'user[password]',nil, :id=>'password', :class=>'form-control',:maxLength=>100,:required=>'required' %>
  </div>
  <%= submit_tag t(:login),:class=>"btn btn-primary" %>
	<% end %>
	<% end %>
	</fieldset>
<div id="ad_main" class="main_content">
<% if Rails.env.production? %>
<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- 250정사각형 -->
<ins class="adsbygoogle"
     style="display:inline-block;width:250px;height:250px"
     data-ad-client="ca-pub-5400903051441488"
     data-ad-slot="4189637134"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
<% else %>
<div style="width:250px;height:250px;background:red;">&nbsp;</div>
<% end %>
</div>
</aside>
