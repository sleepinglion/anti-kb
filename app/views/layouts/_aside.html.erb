<aside>
	<% if user_signed_in? %>
	<article id="login_users">
		<p>
			<%=link_to edit_user_registration_path do %>
			<span id="username"><%=current_user.name %></span>님 환영합니다.
			<% end %>
		</p>
		<p id="logout_submit"><%= link_to t(:logout), destroy_user_session_path,:class=>'btn btn-secondary btn-block' %></p>
	</article>
	<% else %>
	<article>
		<p>서명후 로그인가능합니다</p>
		<h2><%=link_to t(:login),new_user_session_path,:class=>"btn btn-block btn-primary" %></h2>
		<p>
    	<%= link_to "서명하기", new_user_registration_path %>
    	<%= link_to "비밀번호 찾기", new_user_password_path %>
		</p>
	</article>
	<% end %>
	<article>
		<h3>KB 임직원의 진심</h3>
		<%=link_to 'KB 임직원의 마음의 소리','/kbsmind',:class=>'modal_link btn btn-block btn-large btn-success',:'data-toggle'=>"modal",:'data-target'=>"#myModal" %>
	</article>
	<div id="ad_main" class="main_content">
		<% if Rails.env.production? %>
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
		<!-- 250정사각형 -->
		<ins class="adsbygoogle"
     style="display:inline-block;width:250px;height:250px"
     data-ad-client="ca-pub-5400903051441488"
     data-ad-slot="4189637134">
		</ins>
		<script>
		(adsbygoogle = window.adsbygoogle || []).push({});
		</script>
		<% else %>
		<div style="width:250px;height:250px;background:red;">&nbsp;</div>
		<% end %>
	</div>
</aside>
