<article class="panel panel-default">
	<h3 class="none">KB관련 기사</h3>
	<div class="panel-body">
	<% unless @articles.empty? %>
	<ul>
		<% @articles.each do |article| %>
		<li><%=link_to(article.title,article.url,{:target=>'_blank'}) %> <span class="date"><%=article.created_at.to_date %></span></li>
		<% end %>
	</ul>
	<% else %>
	<p><%=t(:no_data) %></p>
	<% end %>
	<%=link_to t(:link_more),articles_path,:class=>'more' %>
	</div>
</article>
