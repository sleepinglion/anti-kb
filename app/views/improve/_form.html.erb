<%=form_for @improve,:html=>{:class=>'form-horizontal'}  do |f| %>
	<% if @improve.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@improve.errors.count, "error") %> prohibited this improve from being saved:</h2>
      <ul>
      <% @improve.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
		<%= f.label :title, :class=>'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :title, :class=>'form-control input-lg', :required=>'required' %>
		</div>
  </div>
  <div class="form-group">
		<%= f.label :content, :class=>'col-sm-2 control-label' %>
		<div class="col-sm-10">
    	<%= f.text_area :content, :class=>'form-control input-lg', :rows=>7, :required=>'required' %>
    </div>
  </div>
	<% if Rails.env.production?	%>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10"><%= recaptcha_tags :display => { :theme => "clean" } %></div>
	</div>
	<% end %>
	<div class="form-group actions">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit :class=>'btn btn-lg btn-block btn-primary' %>
		</div>
 </div>
<% end %>
